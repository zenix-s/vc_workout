@page "/"
@using vc_workout.wasm.Services
@using vc_workout.wasm.Models
@inject WorkoutStateService WorkoutState
@inject StatsService StatsService
@implements IDisposable

<PageTitle>Dashboard</PageTitle>

<div class="space-y-6">
    <h1 class="text-3xl font-bold text-gray-800">Dashboard</h1>

    @if (_isLoading)
    {
        <div class="flex justify-center py-12">
            <div class="animate-spin rounded-full h-12 w-12 border-t-4 border-b-4 border-blue-500"></div>
        </div>
    }
    else if (_stats != null)
    {
        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <div class="bg-white rounded-lg shadow-md p-6">
                <h3 class="text-sm font-medium text-gray-500 uppercase">Total Workouts</h3>
                <p class="text-4xl font-bold text-blue-600 mt-2">@_stats.TotalWorkouts</p>
            </div>
            
            <div class="bg-white rounded-lg shadow-md p-6">
                <h3 class="text-sm font-medium text-gray-500 uppercase">Last Workout</h3>
                <p class="text-lg font-semibold text-gray-800 mt-2">@(_stats.LastWorkoutDate?.ToString("dd/MM/yyyy") ?? "N/A")</p>
            </div>
            
            <div class="bg-white rounded-lg shadow-md p-6">
                <h3 class="text-sm font-medium text-gray-500 uppercase">Sets This Month</h3>
                <p class="text-4xl font-bold text-green-600 mt-2">@_stats.SetsThisMonth</p>
            </div>
            
            <div class="bg-white rounded-lg shadow-md p-6">
                <h3 class="text-sm font-medium text-gray-500 uppercase">Current Streak</h3>
                <p class="text-4xl font-bold text-purple-600 mt-2">@_stats.CurrentStreak</p>
            </div>
        </div>

        <!-- Workout Actions -->
        <div class="bg-white rounded-lg shadow-md p-6">
            @if (WorkoutState.HasActiveWorkout)
            {
                <div class="space-y-4">
                    <div class="flex items-center space-x-2">
                        <span class="inline-block w-3 h-3 bg-green-500 rounded-full animate-pulse"></span>
                        <span class="text-lg font-semibold text-gray-800">Active Workout</span>
                    </div>
                    <p class="text-gray-600">Workout ID: @WorkoutState.ActiveWorkoutId</p>
                    <button class="px-6 py-3 bg-red-500 hover:bg-red-600 text-white font-semibold rounded-lg transition-colors duration-200" 
                            @onclick="FinishWorkout">
                        Finish Workout
                    </button>
                </div>
            }
            else
            {
                <div class="space-y-4">
                    <h2 class="text-xl font-semibold text-gray-800">Ready to workout?</h2>
                    <p class="text-gray-600">Start a new workout session to track your exercises and sets.</p>
                    <button class="px-6 py-3 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-lg transition-colors duration-200" 
                            @onclick="StartWorkout">
                        Start Workout
                    </button>
                </div>
            }
        </div>
    }
</div>

@code {
    private Stats? _stats;
    private bool _isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await WorkoutState.InitializeAsync();
        WorkoutState.OnChange += StateHasChanged;
        await LoadStatsAsync();
    }

    private async Task LoadStatsAsync()
    {
        _isLoading = true;
        _stats = await StatsService.GetStatsAsync();
        _isLoading = false;
    }

    private async Task StartWorkout()
    {
        await WorkoutState.StartWorkoutAsync();
        await LoadStatsAsync();
    }

    private async Task FinishWorkout()
    {
        await WorkoutState.FinishWorkoutAsync();
        await LoadStatsAsync();
    }

    public void Dispose()
    {
        WorkoutState.OnChange -= StateHasChanged;
    }
}

