@page "/workouts"
@using vc_workout.wasm.Services
@using vc_workout.wasm.Models
@inject WorkoutService WorkoutService
@inject NavigationManager NavigationManager

<PageTitle>Workouts</PageTitle>

<div class="space-y-6">
    <h1 class="text-3xl font-bold text-gray-800">Workouts</h1>

    @if (_isLoading)
    {
        <div class="flex justify-center py-12">
            <div class="animate-spin rounded-full h-12 w-12 border-t-4 border-b-4 border-blue-500"></div>
        </div>
    }
    else if (_pagedResult != null && _pagedResult.Items.Any())
    {
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Sets</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var workout in _pagedResult.Items)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@workout.Id</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@workout.Date.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                @if (workout.EndDate == null)
                                {
                                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                                        Active
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                                        Completed
                                    </span>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@workout.SetCount</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                                <button class="px-3 py-1 bg-blue-500 hover:bg-blue-600 text-white rounded transition-colors duration-200" 
                                        @onclick="() => ViewDetails(workout.Id)">
                                    View
                                </button>
                                <button class="px-3 py-1 bg-red-500 hover:bg-red-600 text-white rounded transition-colors duration-200" 
                                        @onclick="() => DeleteWorkout(workout.Id)">
                                    Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="flex justify-center">
            <nav class="inline-flex rounded-md shadow-sm -space-x-px">
                @for (int i = 1; i <= _pagedResult.TotalPages; i++)
                {
                    var pageNum = i;
                    <button @onclick="() => LoadPage(pageNum)"
                            class="@(pageNum == _currentPage ? "bg-blue-500 text-white" : "bg-white text-gray-700 hover:bg-gray-50") px-4 py-2 border border-gray-300 text-sm font-medium transition-colors duration-200">
                        @pageNum
                    </button>
                }
            </nav>
        </div>
    }
    else
    {
        <div class="bg-white rounded-lg shadow-md p-8 text-center">
            <p class="text-gray-600">No workouts found.</p>
        </div>
    }
</div>

<!-- Modal -->
@if (_selectedWorkout != null)
{
    <div class="fixed inset-0 z-50 overflow-y-auto" @onclick="CloseDetails">
        <div class="flex items-center justify-center min-h-screen px-4">
            <div class="fixed inset-0 bg-black opacity-50"></div>
            
            <div class="relative bg-white rounded-lg shadow-xl max-w-4xl w-full max-h-screen overflow-y-auto" @onclick:stopPropagation="true">
                <div class="sticky top-0 bg-white border-b border-gray-200 px-6 py-4 flex justify-between items-center">
                    <h2 class="text-2xl font-bold text-gray-800">Workout Details</h2>
                    <button @onclick="CloseDetails" class="text-gray-400 hover:text-gray-600">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                    </button>
                </div>
                
                <div class="px-6 py-4">
                    <div class="space-y-4 mb-6">
                        <div>
                            <span class="font-semibold text-gray-700">Date:</span>
                            <span class="ml-2 text-gray-900">@_selectedWorkout.Date.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                        <div>
                            <span class="font-semibold text-gray-700">Status:</span>
                            <span class="ml-2 text-gray-900">
                                @(_selectedWorkout.EndDate == null ? "Active" : $"Completed at {_selectedWorkout.EndDate:dd/MM/yyyy HH:mm}")
                            </span>
                        </div>
                    </div>
                    
                    @if (_selectedWorkout.Sets.Any())
                    {
                        <div class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead class="bg-gray-50">
                                    <tr>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Exercise</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Set #</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Weight (KG)</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Reps</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">RPE</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">
                                    @foreach (var set in _selectedWorkout.Sets.OrderBy(s => s.CreatedAt))
                                    {
                                        <tr class="hover:bg-gray-50">
                                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@set.ExerciseName</td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@set.SetNumber</td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@set.Weight</td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@set.Reps</td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@set.Rpe</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-gray-600 text-center py-4">No sets recorded for this workout.</p>
                    }
                </div>
                
                <div class="sticky bottom-0 bg-gray-50 px-6 py-4 border-t border-gray-200">
                    <button @onclick="CloseDetails" 
                            class="px-4 py-2 bg-gray-300 hover:bg-gray-400 text-gray-700 font-semibold rounded-lg transition-colors duration-200">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private PagedResult<WorkoutListItem>? _pagedResult;
    private bool _isLoading = true;
    private int _currentPage = 1;
    private int _pageSize = 10;
    private WorkoutDetail? _selectedWorkout;

    protected override async Task OnInitializedAsync()
    {
        await LoadPage(_currentPage);
    }

    private async Task LoadPage(int page)
    {
        _isLoading = true;
        _currentPage = page;
        _pagedResult = await WorkoutService.GetAllAsync(_currentPage, _pageSize);
        _isLoading = false;
    }

    private async Task ViewDetails(int workoutId)
    {
        _selectedWorkout = await WorkoutService.GetByIdAsync(workoutId);
    }

    private void CloseDetails()
    {
        _selectedWorkout = null;
    }

    private async Task DeleteWorkout(int id)
    {
        // TODO: Add JSInterop confirm dialog
        await WorkoutService.DeleteAsync(id);
        await LoadPage(_currentPage);
    }
}
